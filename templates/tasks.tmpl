<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Hello World</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <script>
        function submitTask() {
            console.log("Saving task...")

            const tmp = document.getElementById('inputDescription').value

            fetch("http://localhost:8080/tasks", {
                method: "POST",
                body: JSON.stringify({
                    id: 1,
                    description: tmp,
                    done: false
                }),
                headers: {
                    "Content-type": "application/json; charset=UTF-8"
                }
            })
                .then((response) => response.json())
                .then((json) => console.log(json))
                .then(() => window.location.reload());
        }
    </script>
</head>
<body>
<div class="container">

    <div class="d-flex justify-content-evenly align-items-center">
        <div>
            <h1><strong>Tasks:</strong> {{ . | len }}</h1>
        </div>
        <div>
            <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#submitTaskModal">Create
                Task
            </button>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="submitTaskModal" tabindex="-1" aria-labelledby="submitTaskModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="submitTaskModalLabel">Modal title</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <label for="inputDescription" class="form-label">Description</label>
                        <input type="text" id="inputDescription" class="form-control">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" onclick="submitTask('smt')">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
            <tr class="table-dark">
                <th scope="col">#</th>
                <th scope="col">Description</th>
                <th scope="col">Status</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {{ range . }}
            <tr>
                <th scope="row">{{ .Id }}</th>
                <td>{{ .Description }}</td>
                <td>{{ .Done }}</td>
                <td><button type="button" class="btn btn-outline-warning">Base class</button></td>
            </tr>
            {{ end }}
            </tbody>
        </table>
        </table>
    </div>
</body>
</html>